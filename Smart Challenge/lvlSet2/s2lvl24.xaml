    <Grid Height="480" Name="grid1" Width="800">
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="800" Source="/Smart%20Challenge;component/Images/bgLvl.jpg" />
        <TextBlock FontFamily="TextFont.ttf#TextFont" FontSize="32" FontWeight="SemiBold" Foreground="#FF006CFF" HorizontalAlignment="Center" Margin="10,22,10,398" Name="Instr" Text="" TextAlignment="Center" TextWrapping="Wrap" Width="780" />
        <Image x:Name="Caldo" HorizontalAlignment="Left" Height="410" Margin="580,45,0,0" VerticalAlignment="Top" Width="220" Source="/Images/imgLvl2/caldo.png"/>
        <Image x:Name="Freddo" HorizontalAlignment="Left" Height="425" Margin="10,30,0,0" VerticalAlignment="Top" Width="220" Source="/Images/imgLvl2/freddo.png"/>
        <Button x:Name="bot1" Content="" HorizontalAlignment="Left" Margin="285,75,0,0" VerticalAlignment="Top" Background="#FF008BFF" BorderBrush="#FF4D54E0" Foreground="#FFF32525" Height="77" Width="239" MouseEnter="bot1_MouseEnter"/>
        <Button x:Name="bot1_Copy" Content="Antartide" HorizontalAlignment="Left" Margin="285,142,0,0" VerticalAlignment="Top" Background="#FF008BFF" BorderBrush="#FF4D54E0" Foreground="#FFF32525" Height="77" Width="239" MouseEnter="bot1_Copy_MouseEnter"/>
        <Button x:Name="bot1_Copy1" Content="Alaska" HorizontalAlignment="Left" Margin="285,214,0,0" VerticalAlignment="Top" Background="#FF008BFF" BorderBrush="#FF4D54E0" Foreground="#FFF32525" Height="77" Width="239" MouseEnter="bot1_Copy1_MouseEnter"/>
        <Button x:Name="bot1_Copy2" Content="Timbuctu" HorizontalAlignment="Left" Margin="285,296,0,0" VerticalAlignment="Top" Background="#FF008BFF" BorderBrush="#FF4D54E0" Foreground="#FFF32525" Height="77" Width="239" RenderTransformOrigin="0.481,1.74" MouseEnter="bot1_Copy2_MouseEnter"/>
        <Button x:Name="bot1_Copy3" Content="Rogers Pass" HorizontalAlignment="Left" Margin="285,373,0,0" VerticalAlignment="Top" Background="#FF008BFF" BorderBrush="#FF4D54E0" Foreground="#FFF32525" Height="77" Width="239" RenderTransformOrigin="0.481,1.74" MouseEnter="bot1_Copy3_MouseEnter"/>
    </Grid>
