            <shell:ApplicationBarIconButton IconUri="/Images/appbar_button2.png" Text="Pulsante 2"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Voce di menu 1"/>
                <shell:ApplicationBarMenuItem Text="Voce di menu 2"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>-->
    <Grid Height="480" Name="grid1" Width="800" Loaded="grid1_Loaded">
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="800" Source="/Smart%20Challenge;component/Images/bgLvl.jpg" />
        <TextBlock FontFamily="TextFont.ttf#TextFont" FontSize="32" FontWeight="SemiBold" Foreground="#FF006CFF" HorizontalAlignment="Center" Margin="10,0,10,434" Name="Instr" Text="" TextAlignment="Center" TextWrapping="Wrap" Width="780" />
        <Image x:Name="lab" HorizontalAlignment="Left" Margin="75,46,0,0" Width="640" Source="/Images/imgLvl3/lab.jpg" Height="424" VerticalAlignment="Top"/>
        <Image x:Name="onair" HorizontalAlignment="Left" Height="161.125" Margin="649.757,202.93,-15.274,0" VerticalAlignment="Top" Width="165.517" Source="/Images/imgLvl3/antenna.png" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform Rotation="0.963"/>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="btn1" Content="A" HorizontalAlignment="Left" Height="87" Margin="80,0,0,347" VerticalAlignment="Bottom" Width="87" BorderBrush="{x:Null}" Foreground="White" FontFamily="TextFont.ttf#TextFont" FontSize="36" Tap="btn_Tap" RenderTransformOrigin="-1.223,-1.465">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/imgLvl1/btn_12.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn2" Content="B" HorizontalAlignment="Left" Height="87" Margin="36,0,0,244" VerticalAlignment="Bottom" Width="87" BorderBrush="{x:Null}" Foreground="White" FontFamily="TextFont.ttf#TextFont" FontSize="36" Tap="btn_Tap" RenderTransformOrigin="-1.223,-1.465">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/imgLvl1/btn_12.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn3" Content="C" HorizontalAlignment="Left" Height="87" Margin="109,0,0,79" VerticalAlignment="Bottom" Width="87" BorderBrush="{x:Null}" Foreground="White" FontFamily="TextFont.ttf#TextFont" FontSize="36" Tap="btn_Tap" RenderTransformOrigin="-1.223,-1.465">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/imgLvl1/btn_12.png"/>
            </Button.Background>
        </Button>
    </Grid>
</phone:PhoneApplicationPage>
