    <Grid Height="480" Name="grid1" Width="800" Loaded="grid1_Loaded">
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="800" Source="/Smart%20Challenge;component/Images/bgLvl.jpg" />
        <TextBlock FontFamily="TextFont.ttf#TextFont" FontSize="32" FontWeight="SemiBold" Foreground="#FF006CFF" HorizontalAlignment="Center" Margin="10,22,10,374" Name="Instr" Text="" TextAlignment="Center" TextWrapping="Wrap" Width="780" />
        <Image x:Name="off1" HorizontalAlignment="Left" Height="160" Margin="133,193,0,0" VerticalAlignment="Top" Width="121" Source="/Images/imgLvl3/leva.png" Tap="off1_Tap"/>
        <Image x:Name="off2" HorizontalAlignment="Left" Height="160" Margin="357,193,0,0" VerticalAlignment="Top" Width="121" Source="/Images/imgLvl3/leva.png" Tap="off2_Tap"/>
        <Image x:Name="off3" HorizontalAlignment="Left" Height="160" Margin="584,193,0,0" VerticalAlignment="Top" Width="121" Source="/Images/imgLvl3/leva.png" Tap="off3_Tap"/>
        <Image x:Name="on1" HorizontalAlignment="Left" Height="160" Margin="126,190,0,0" VerticalAlignment="Top" Width="127" Source="/Images/imgLvl3/leva.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="on2" HorizontalAlignment="Left" Height="160" Margin="348,191,0,0" VerticalAlignment="Top" Width="127" Source="/Images/imgLvl3/leva.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="on3" HorizontalAlignment="Left" Height="160" Margin="576,191,0,0" VerticalAlignment="Top" Width="127" Source="/Images/imgLvl3/leva.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</phone:PhoneApplicationPage>
