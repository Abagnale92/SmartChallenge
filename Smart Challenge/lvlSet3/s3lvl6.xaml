    <Grid Height="480" Name="grid1" Width="800">
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="800" Source="/Smart%20Challenge;component/Images/bgLvl.jpg" RenderTransformOrigin="0.509,0.544" />
        <TextBlock FontFamily="TextFont.ttf#TextFont" FontSize="32" FontWeight="SemiBold" Foreground="#FF006CFF" HorizontalAlignment="Center" Margin="10,22,10,398" Name="Instr" Text="" TextAlignment="Center" TextWrapping="Wrap" Width="780" />
        <Button x:Name="bot" Content="3" HorizontalAlignment="Center" Margin="250,300,0,0" VerticalAlignment="Top" Background="#FF33E2C2" BorderBrush="#FF3475C3" Foreground="White" Height="118" Width="129" FontSize="36" Tap="bot_Copy1_Tap"/>
        <Button x:Name="bot_Copy" Content="4" HorizontalAlignment="Center" Margin="250,120,0,0" VerticalAlignment="Top" Background="#FF33E2C2" BorderBrush="#FF3475C3" Foreground="White" Height="118" Width="129" FontSize="36" Tap="bot_Copy_Tap"/>
        <Button x:Name="bot_Copy1" Content="2" HorizontalAlignment="Center" Margin="-350,120,0,0" VerticalAlignment="Top" Background="#FF33E2C2" BorderBrush="#FF3475C3" Foreground="White" Height="118" Width="126" FontSize="36" Tap="bot_Copy1_Tap"/>
        <Button x:Name="bot_Copy2" Content="5" HorizontalAlignment="Center" Margin="-350,300,0,0" VerticalAlignment="Top" Background="#FF33E2C2" BorderBrush="#FF3475C3" Foreground="White" Height="118" Width="129" FontSize="36" Tap="bot_Copy1_Tap"/>
