        <Image x:Name="u3" HorizontalAlignment="Left" Height="105" Margin="264,105,0,0" VerticalAlignment="Top" Width="126" Source="/Images/imgLvl9/uovo1.png" Tap="u3_Tap"/>
        <Image x:Name="u4" HorizontalAlignment="Left" Height="105" Margin="621,312,0,0" VerticalAlignment="Top" Width="126" Source="/Images/imgLvl9/uovo1.png" Tap="u4_Tap"/>
        <Image x:Name="u5" HorizontalAlignment="Left" Height="105" Margin="275,312,0,0" VerticalAlignment="Top" Width="126" Source="/Images/imgLvl9/uovo1.png" Tap="u5_Tap"/>
        <Image x:Name="b1" HorizontalAlignment="Left" Height="123" Margin="681,105,0,0" VerticalAlignment="Top" Width="87" Source="/Images/imgLvl9/uovo2.png" Tap="b_Tap"/>
        <Image x:Name="b2" HorizontalAlignment="Left" Height="123" Margin="36,88,0,0" VerticalAlignment="Top" Width="87" Source="/Images/imgLvl9/uovo2.png" Tap="b_Tap"/>
        <Image x:Name="b3" HorizontalAlignment="Left" Height="123" Margin="479,357,0,0" VerticalAlignment="Top" Width="87" Source="/Images/imgLvl9/uovo2.png" Tap="b_Tap"/>
